<div class="container body-content">
    <div class="row">

        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{discussion.title}}</h2>
                </header>

                <small class="author">
                    {{discussion.author.fullName}}
                </small>

                <p>
                    {{discussion.content}}
                </p>

                <footer>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                            <a class="btn btn-success btn-xs" href="/discussion/edit/{{discussion.id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/discussion/delete/{{discussion.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>

            {{#each replys}}
                <h1>{{this.content}}</h1>
                <p>{{this.author.fullName}}</p>
                <p>{{this.date}}</p>
            {{/each}}
        <form class="form-horizontal" method="POST" action="/discussion/details/{{discussion.id}}">
            <fieldset>
                <div class="form-group">
                    <h2 class="font-color-next">Reply</h2>
                    <h3 class="font-color-next">Content</h3>
                    <textarea id="replyContent" name="replyContent" rows="8" cols="120"></textarea>
                </div>
                <div class="form-group">
                        {{#if error}}
                        <p style="color:red;">{{error}}</p>
                        {{/if}}
                        <button type="submit" class="btn btn-success">Reply</button>
                </div>
            </fieldset>
        </form>
        </div>
    </div>
</div>
