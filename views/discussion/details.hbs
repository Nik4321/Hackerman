<div class="container body-content">
    <div class="row">

        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{title}}</h2>
                </header>

                <small class="author">
                    {{author.fullName}}
                </small>

                <p>
                    {{content}}
                </p>

                <footer>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                            <a class="btn btn-success btn-xs" href="/discussion/edit/{{id}}">Edit &raquo;</a>
                            <a class="btn btn-danger btn-xs" href="/discussion/delete/{{id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>

            <fieldset>
                <div class="form-group">
                    <h2>Reply</h2>
                    <h3>Content</h3>
                    <textarea style="background-color: #16191d" id="discussionContent" name="content" rows="8" cols="120" value=""></textarea>
                </div>
                <div class="form-group">
                        <button type="submit" class="btn btn-success">Reply</button>

                </div>
            </fieldset>
        </div>
    </div>
</div>
