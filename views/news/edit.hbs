<div class="container body-content span=8 offset=2">
    <div class="well col-lg-9">
        <form class="form-horizontal" method="POST" action="/news/edit/{{id}}">
            <fieldset>
                <div class="form-group col-md-12">
                    <h2 class="font-color-next">Edit News</h2>
                    <br/>

                    <div class="col-sm-12">
                        <h3 class="font-color-next">Title</h3>
                        <input maxlength="70" type="text" class="form-control" id="NewsTitle" placeholder="News Title" value="{{title}}" name="title" required >
                        <h3 class="font-color-next">Content</h3>
                        <textarea maxlength="2000" class="form-control" id="newsContent" rows="5" name="content">{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/news/edit/{{id}}" class="btn btn-default">Cancel</a>
                        <button type="submit" href="/news/edit/{{id}}" class="btn btn-cool">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
