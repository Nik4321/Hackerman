<div class="container body-content">
    <div class="row">
        {{#each news}}
            <div class="col-md-6">
                <div class="sectionMain">

                <article>
                    <header>
                        <h2>{{this.title}}</h2>
                    </header>

                    <small class="author">
                        {{this.author.fullName}}
                    </small>

                    <footer>
                        <div class="pull-right">
                            <a class="btn btn-default btn-xs" href="/news/details/{{this.id}}">Read more &raquo;</a>
                        </div>
                    </footer>
                </article>

                </div>
            </div>
        {{/each}}
    </div>
</div>
