
<script src="http://js.nicedit.com/nicEdit-latest.js" type="text/javascript"></script>
<script type="text/javascript">
    bkLib.onDomLoaded(nicEditors.allTextAreas);
</script>

<div class="well col-lg-9">
    <div class="container body-content span=8 offset=2">
        <form class="form-horizontal" method="POST" action="/news/create">
            <fieldset>
                <div class="form-group col-md-11">
                    <h2 class="font-color-next">Publish News</h2>
                    <br/>

                    <h3 class="font-color-next">Title</h3>
                    <input type="text" class="form-control" id="newsTitle" placeholder="News Title" name="title" required>

                    <h3 class="font-color-next">Content</h3>
                    <em></em>
                    <textarea id="newsContent" name="content" rows="10" cols="140" value=""></textarea>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
