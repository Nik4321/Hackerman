<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/news/delete/{{id}}">
            <fieldset>
                <legend>Delete News</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="newsTitle">News Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="newsTitle" placeholder="News Title" value="{{title}}" name="title" disabled >
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label" for="newsContent">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" id="newsContent" rows="5" name="content" disabled>{{content}}</textarea>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">

                        <a href="/" class="btn btn-default">Cancel</a>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
