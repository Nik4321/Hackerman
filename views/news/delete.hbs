<div class="container body-content span=8 offset=2">
    <div class="well col-lg-9">
        <form class="form-horizontal" method="POST" action="/news/delete/{{id}}">
            <fieldset>
                <div class="form-group col-md-12">
                    <h2 class="font-color-next">Delete News</h2>
                    <br/>

                    <div class="col-sm-12">
                        <h3 class="font-color-next">Title</h3>

                        <input type="text" class="form-control" id="newsTitle" placeholder="News Title" value="{{title}}" name="title" disabled>
                        <h3 class="font-color-next">Content</h3>
                        <textarea class="form-control" id="newsContent" rows="5" name="content" disabled>{{content}}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a href="/news/details/{{id}}" class="btn btn-default">Cancel</a>

                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
