<div class="container body-content">
    <div class="row">
        <div class="col-md-12">
            <article>
                <header>
                    <h2>{{news.title}}</h2>
                </header>

                <p>
                    {{news.content}}
                </p>

                <small class="author">
                    {{news.author.fullName}}
                </small>

                <footer>
                    <div class="pull-right">
                        {{#if isUserAuthorized}}
                        <a class="btn btn-success btn-xs" href="/news/edit/{{news.id}}">Edit &raquo;</a>
                        <a class="btn btn-danger btn-xs" href="/news/delete/{{news.id}}">Delete &raquo;</a>
                        {{/if}}
                        <a class="btn btn-default btn-xs" href="/">Back &raquo;</a>
                    </div>
                </footer>
            </article>

            <div class="replyMain">
            {{#each replies}}
                <article>
                <h4>{{this.content}}</h4>
                <small class="author">{{this.author.fullName}}</small>
                <p style="color: #000;">{{this.date}}</p>
                </article>
            {{/each}}
            </div>
            
            <br>
            <div class="replyMain">
                <form class="form-horizontal" method="POST" action="/news/details/{{news.id}}">
                    <fieldset style="align-content: center">
                        <div class="form-group" style="margin-left: 6%">
                            <h2 class="font-color-next" style="margin-left: 36%">Reply</h2>
                            <h4 class="font-color-next">Content</h4>
                            <textarea id="replyContent" name="replyContent" rows="8" cols="120"></textarea>
                        </div>
                        <div class="form-group">
                                {{#if error}}
                                <p style="color:red;">{{error}}</p>
                                {{/if}}
                                <button style="margin-left: 7%" type="submit" class="btn btn-cool">Reply</button>
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
