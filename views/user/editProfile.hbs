<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="post" action="/user/editProfile">
            <fieldset>
                <legend>Edit User Profile</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label">First Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="firstName" placeholder="First Name" name="firstName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Last Name</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="lastName" placeholder="Last Name" name="lastName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Date of Birth</label>
                    <div class="col-sm-4">
                        <input type="date" class="form-control" id="birthday" placeholder="Date of Birth" name="birthday">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Current Address</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="currentAddress" placeholder="Current Address" name="currentAddress">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Place of Birth</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="birthPlace" placeholder="Place of Birth" name="birthPlace">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Nationality</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="nationality" placeholder="Nationality" name="nationality">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="/">Cancel</a>
                        <button type="submit" class="btn btn-primary" href="user/details">Edit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
