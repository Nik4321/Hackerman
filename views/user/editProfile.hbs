<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" method="POST" action="/user/editProfile/{{user.id}}">
            <fieldset>
                <legend>Edit User Profile</legend>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Full Name</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="fullName" value={{user.fullName}} name="fullName">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">Email</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="email" value={{user.email}} name="email">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <p style="color:red;">{{error}}</p>
                        <a class="btn btn-default" href="/user/details/{{user.id}}">Cancel</a>
                        <button type="submit" class="btn btn-success">Update Profile</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
